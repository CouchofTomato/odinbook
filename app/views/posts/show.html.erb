<div>
  <%= link_to "#{@post.author}", profile_path(@post.user) %>
</div>
<div>
  <%= @post.content %>
</div>
<div>
  <p>Likes: <%= @likes %></p>
</div>
<div>
  <% if @post.liked_by? (current_user) %>
    <%= link_to "Unlike", user_post_like_path(@post), method: :delete %>
  <% else %>
    <%= link_to "Like", user_post_like_path(@post), method: :post %>
  <% end %>
</div>
<h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <%= link_to "#{comment.author}", profile_path(comment.user) %>
    <%= comment.content %>
  </div>
<% end %>
